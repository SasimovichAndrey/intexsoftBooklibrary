<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
	<class name="intexsoftBookLibrary.library.Library" table="libraries">
		<id column="id" name="id" type="java.lang.Integer">
		      <generator class="increment"/>
		</id>
		<property column="name" name="name" type="java.lang.String"/>
		<list name="books" cascade="save-update, delete" inverse="true" lazy="false">
	      <key column="lib_id"/>
	      <list-index column="book_index"/>
	      <one-to-many class="intexsoftBookLibrary.library.Book"/>
	    </list>
	</class>
</hibernate-mapping>